<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tra_apps_name_tv"
            android:layout_width="110dp"
            android:layout_height="50dp"
            android:text="名称" />

        <TextView
            android:id="@+id/tra_apps_rx_name"
            android:layout_width="70dp"
            android:layout_height="50dp"
            android:text="下载流量(KB)" />

        <TextView
            android:id="@+id/tra_apps_tx_name"
            android:layout_width="70dp"
            android:layout_height="50dp"
            android:text="上传流量(KB)" />

        <TextView
            android:id="@+id/tra_apps_total_name"
            android:layout_width="70dp"
            android:layout_height="50dp"
            android:text="流量总计(KB)" />
    </LinearLayout>

    <ListView
        android:id="@+id/tra_apps_data_listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
    </ListView>

</LinearLayout>