<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <RelativeLayout
        android:id="@+id/rl_Click_box"
        android:layout_width="match_parent"
        android:layout_height="65dp" >
        <TextView
            android:id="@+id/tv_setting_title_click"
            style="@style/textView16sp"
            android:textSize="20sp"
            android:padding="3dp"
            android:textColor="@color/deep_blue" />

        <TextView
            android:id="@+id/tv_setting_status_click"
            style="@style/TextView14sp"
            android:textSize="16sp"
            android:layout_below="@id/tv_setting_title_click"
            android:padding="3dp"
            android:textColor="@color/black" />
        <ImageView 
            android:id="@+id/imgv_setting_Click"
            android:layout_width="13dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:src="@drawable/arrow_right"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_alignParentBottom="true"
            android:background="@color/black" />
    </RelativeLayout>


</RelativeLayout>